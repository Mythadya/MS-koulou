{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="container-fluid">

    <section class="bg-light p-3 mb-4">
        <h1>Votre Panier</h1>
        {# Affichage d'un message si le panier est vide #}
        {% if dataPanier is empty %}
            <p class="text-muted">Votre panier est vide pour le moment.</p>
        {% endif %}
    </section>

    {# Affichage du panier uniquement s'il contient des produits #}
    {% if dataPanier is not empty %}
    <div class="row">
        
        <div class="col-12 col-md-9">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th class="text-center">Image</th> {# Ajout du titre 'Image' pour clarifier #}
                            <th class="text-center">Produit</th>
                            <th class="text-center">Prix</th>
                            <th class="text-center">Quantité</th>
                            <th class="text-center">Total</th>
                            <th class="text-center">Actions</th> {# Colonne pour les boutons d'action #}
                        </tr>
                    </thead>
                    <tbody>
                        {# Boucle sur les produits dans le panier #}
                        {% for element in dataPanier %}
                        <tr>
                            <td class="text-center">
                                {# Image du produit avec un alt plus descriptif pour l'accessibilité #}
                                <img src="{{ asset('img/food/' ~ element.plat.image) }}" alt="Image de {{ element.plat.libelle }}" class="img-fluid imagepanier">
                            </td>
                            <td class="text-center">{{ element.plat.libelle }}</td> {# Nom du produit #}
                            <td class="text-center">{{ element.plat.prix }} €</td> {# Prix du produit #}
                            <td class="text-center">
                                {# Gestion de la quantité avec boutons pour augmenter ou réduire #}
                                <div class="d-flex justify-content-center align-items-center">
                                    {# Bouton pour enlever un produit #}
                                    <a href="{{ path('app_enlever_panier', {id: element.plat.id}) }}" class="btn btn-warning btn-sm me-2" aria-label="Enlever un {{ element.plat.libelle }}">
                                        <i class="bi bi-cart-dash"></i> {# Icone pour enlever un produit #}
                                    </a>
                                    <span>{{ element.quantite }}</span> {# Affichage de la quantité #}
                                    {# Bouton pour ajouter un produit #}
                                    <a href="{{ path('app_ajout_panier', {id: element.plat.id}) }}" class="btn btn-success btn-sm ms-2" aria-label="Ajouter un {{ element.plat.libelle }}">
                                        <i class="bi bi-cart-plus"></i> {# Icone pour ajouter un produit #}
                                    </a>
                                </div>
                            </td>
                            <td class="text-center">{{ element.plat.prix * element.quantite }} €</td> {# Calcul du total par produit #}
                            <td class="text-center">
                                {# Bouton pour supprimer un produit du panier #}
                                <a href="{{ path('app_supprimer_panier', {id: element.plat.id}) }}" class="btn btn-danger btn-sm" aria-label="Supprimer {{ element.plat.libelle }}">
                                    <i class="bi bi-cart-x"></i> {# Icone de suppression #}
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    {# Footer pour les petits écrans uniquement (d-md-none) #}
                    <tfoot class="d-md-none">
                        <tr>
                            <td colspan="4" class="fw-bold">Total :</td> {# Affichage du total #}
                            <td class="text-end">{{ total }} €</td>
                            <td class="text-end">
                                {# Bouton pour vider tout le panier #}
                                <a href="{{ path('app_supprimer_panier_all') }}" class="btn btn-danger btn-sm">
                                    <i class="bi bi-cart-x"></i> {# Icone de suppression totale #}
                                </a>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        {# Colonne pour le récapitulatif du panier, affiché à droite sur grand écran #}
        <div class="col-12 col-md-3">
            <div class="bg-light p-3">
                <h4 class="mb-3">Résumé de votre commande</h4>
                <ul class="list-group mb-3">
                    {# Affichage de chaque produit avec la quantité et le prix #}
                    {% for element in dataPanier %}
                    <li class="list-group-item d-flex justify-content-between">
                        <span>{{ element.plat.libelle }} (x{{ element.quantite }})</span>
                        <strong>{{ element.plat.prix * element.quantite }} €</strong>
                    </li>
                    {% endfor %}
                    {# Ligne pour le total du panier #}
                    <li class="list-group-item d-flex justify-content-between">
                        <strong>Total</strong>
                        <strong>{{ total }} €</strong>
                    </li>
                </ul>

                {# Bouton pour passer à la commande #}
                <a href="{{ path('app_commande') }}" class="btn btn-primary w-100">
                    Passer commande
                </a>
                {# Bouton pour vider le panier #}
                <a href="{{ path('app_supprimer_panier_all') }}" class="btn btn-danger mt-2 w-100">
                    Vider le panier
                </a>
            </div>
        </div>

    </div>
    {% endif %}
</div>
{% endblock %}
