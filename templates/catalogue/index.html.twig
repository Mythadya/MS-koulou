{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}  
    <div class="container-fluid g-0 row">
        
        <!-- Colonne pour l'effet parallax visible uniquement sur les grands écrans -->
        <div class="col-2 p-0 d-md-none d-lg-block parallax"></div>
    
        <!-- Colonne principale pour le contenu des catégories et plats -->
        <div class="col-8">
            
            <!-- Titre pour les catégories les plus aimées -->
            <div class="row justify-content-center mt-3">
                <div class="fs-1 col-12 ms-md-5">Les catégories les plus aimées:</div>
                
                <div class="row">
                
                    <!-- Boucle sur la liste des catégories -->
                    {% for categorie in category %}

                    <!-- Chaque catégorie occupe une colonne responsive (change de taille selon la résolution) -->
                    <div class="col-12 col-sm-6 col-md-4 mt-3">

                    <!-- Carte Bootstrap avec coins arrondis -->
                    <div class="card col-12 col-sm-6 col-md-4 mt-3 mx-auto row rounded">

                        <!-- Lien vers la page de la catégorie spécifique -->
                        <a class="link-body-emphasis link-offset-2 link-underline-opacity-0 link-underline-opacity-75-hover justify-content-center" href="{{ path ('app_dishincat' , {categorie_id: categorie.id} ) }}">
                            <!-- Image de la catégorie avec son alt pour l'accessibilité -->
                            <img src="{{ asset ('img/category/' ~ categorie.image) }}" class="card-img-top imagecat" alt="{{ categorie.libelle }}">
                            
                            <!-- Corps de la carte contenant le libellé de la catégorie -->
                            <div class="card-body">
                                <h5 class="card-title">{{ categorie.libelle | upper }}</h5>
                            </div>
                        </a>
                    </div>
                    </div>

                    {% endfor %}

                </div>
            </div>

            <!-- Titre pour les plats vedettes -->
            <div class="row justify-content-center mt-3">
                <h2 class="fs-1 col-12 ms-md-5">Plats vedettes:</h2>
                
                <div class="row">

                    <!-- Boucle sur la liste des plats vedettes -->
                    {% for plats in plat %}

                    <!-- Chaque plat occupe une colonne responsive -->
                    <div class="col-12 col-sm-6 col-md-4 mt-3 justify-content-center">

                        <!-- Carte Bootstrap avec coins arrondis -->
                        <div class="card col-12 col-sm-6 col-md-4 mt-3 mx-auto row rounded">
                            
                            <!-- Lien pour ajouter le plat au panier -->
                            <a class="link-body-emphasis link-offset-2 link-underline-opacity-0 link-underline-opacity-75-hover justify-content-center" href="{{ path ("app_ajout_panier" , {id: plats.id}) }}">
                                <!-- Image du plat avec son alt pour l'accessibilité -->
                                <img src="{{ asset ('img/food/' ~ plats.image) }}" class="card-img-top imagecat" alt="{{ plats.libelle }}">
                                
                                <!-- Corps de la carte avec le libellé du plat -->
                                <div class="card-body">
                                    <h5 class="card-title">{{ plats.libelle }}</h5>
                                </div>
                            </a>
                        </div>
                        
                    </div>

                    {% endfor %}

                </div>
            </div>
        </div>

        <!-- Deuxième colonne pour l'effet parallax (invisible sur mobile) -->
        <div class="col-2 p-0 d-md-none d-lg-block parallax"></div>
    </div>

{% endblock %}
